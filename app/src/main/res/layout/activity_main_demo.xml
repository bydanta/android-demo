<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/huanfeng_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="纯代码布局"/>

    <Button
        android:id="@+id/view_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="自定义VIEW"/>

    <Button
        android:id="@+id/presenter_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="MVP模式"/>

    <Button
        android:id="@+id/list_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="数据列表"/>

    <Button
        android:id="@+id/dialog_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="自定义弹窗"/>

    <Button
        android:id="@+id/viewpage_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="滚动广告窗"/>

    <Button
        android:id="@+id/whell_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="滚动选项"/>

    <Button
        android:id="@+id/zbarcode_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="二维码扫描"/>

    <Button
        android:id="@+id/album_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="相机相册"/>

</LinearLayout>
